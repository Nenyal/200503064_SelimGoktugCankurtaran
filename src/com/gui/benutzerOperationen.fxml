<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: RGB(230,230,230);" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.BenutzerOpsController">

    <VBox prefHeight="400.0" prefWidth="80.0" style="-fx-background-color: RGB(7,16,80);" />
    <ImageView fx:id="imageView" fitHeight="380.0" fitWidth="380.0" layoutX="115.0" layoutY="16.0" opacity="0.2">
        <Image url="@img/dentist.png" />
    </ImageView>
    <Label layoutX="125.0" layoutY="157.0" text="ID : " />
    <Label layoutX="125.0" layoutY="187.0" text="Username :" />
    <Label layoutX="125.0" layoutY="217.0" text="Password :" />
    <Label layoutX="125.0" layoutY="247.0" text="Erlaubnis :" />
    <TextField fx:id="idusertxt" layoutX="225.0" layoutY="155.0" prefHeight="25.0" prefWidth="250.0" promptText="Geben Sie die ID des Users ein" />
    <TextField fx:id="usernametxt" layoutX="225.0" layoutY="185.0" prefHeight="25.0" prefWidth="250.0" promptText="Geben Sie den Username ein" />
    <PasswordField fx:id="passworduser" layoutX="226.0" layoutY="215.0" prefHeight="25.0" prefWidth="250.0" promptText="Geben Sie den Password ein" />
    <ChoiceBox fx:id="choicePerm" layoutX="225.0" layoutY="245.0" prefHeight="25.0" prefWidth="250.0" />
    <Text layoutX="120.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Benutzer Operationen">
        <font>
            <Font name="Century Gothic" size="40.0" />
        </font>
    </Text>
    <Button fx:id="adduserbtn" layoutX="355.0" layoutY="285.0" mnemonicParsing="false" onAction="#addUser" prefHeight="25.0" prefWidth="100.0" text="Hinzufuegen" />
    <Button fx:id="absagenbtn" layoutX="235.0" layoutY="320.0" mnemonicParsing="false" onAction="#redDashboard" prefHeight="25.0" prefWidth="100.0" text="Absagen" />
   <Button fx:id="deleteuserbtn" layoutX="235.0" layoutY="285.0" mnemonicParsing="false" onAction="#deleteUser" prefHeight="25.0" prefWidth="100.0" text="Loeschen" />
   <Button fx:id="updateuserbtn" layoutX="355.0" layoutY="320.0" mnemonicParsing="false" onAction="#updateUser" prefHeight="25.0" prefWidth="100.0" text="Aktualisieren" />
</AnchorPane>
