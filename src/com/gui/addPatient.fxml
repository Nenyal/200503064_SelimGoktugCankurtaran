<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: RGB(230,230,230);"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gui.AddPatientController">
   <VBox prefHeight="400.0" prefWidth="100.0" style="-fx-background-color: RGB(7,16,80);"/>
   <Text layoutX="124.0" layoutY="109.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Patient Hinzufuegen"
         wrappingWidth="407.21484375">
      <font>
         <Font name="Century Gothic" size="40.0"/>
      </font>
   </Text>
   <ImageView fx:id="imageView" fitHeight="380.0" fitWidth="380.0" layoutX="115.0" layoutY="16.0" opacity="0.2">
      <image>
         <Image url="@img/dentist.png"/>
      </image>
   </ImageView>
   <Label layoutX="125.0" layoutY="157.0" text="ID : "/>
   <Label layoutX="125.0" layoutY="187.0" text="Name : "/>
   <Label layoutX="125.0" layoutY="217.0" text="Nachname :"/>
   <Label layoutX="125.0" layoutY="247.0" text="Telefonnummer :"/>
   <TextField fx:id="idaddpatienttxt" layoutX="225.0" layoutY="155.0" prefHeight="25.0" prefWidth="250.0"
              promptText="Geben Sie die ID des Patients ein"/>
   <TextField fx:id="nameaddpatienttxt" layoutX="225.0" layoutY="185.0" prefHeight="25.0" prefWidth="250.0"
              promptText="Geben Sie den Namen ein"/>
   <TextField fx:id="nnameaddpatienttxt" layoutX="225.0" layoutY="215.0" prefHeight="25.0" prefWidth="250.0"
              promptText="Geben Sie den Nachnamen ein"/>
   <TextField fx:id="telnumaddpatienttxt" layoutX="225.0" layoutY="245.0" prefHeight="25.0" prefWidth="250.0"
              promptText="Geben Sie die Telefonnummer ein"/>
   <Button fx:id="addPatientbtn" layoutX="368.0" layoutY="285.0" mnemonicParsing="false" onAction="#addPatient"
           text="Bestaetigen"/>
   <Button fx:id="absagenbtn" layoutX="250.0" layoutY="285.0" mnemonicParsing="false" onAction="#redDashboard"
           prefHeight="25.0" prefWidth="78.0" text="Absagen"/>
</AnchorPane>
